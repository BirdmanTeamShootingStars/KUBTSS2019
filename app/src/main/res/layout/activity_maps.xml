<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sample="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context=".MapsActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="1"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="360dp">


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.67"
                sample:cameraBearing="0.0"
                sample:cameraTargetLat="35.025874"
                sample:cameraTargetLng="135.780865"
                sample:cameraTilt="0.0"
                sample:cameraZoom="15.0"
                sample:mapType="normal"
                sample:uiCompass="true"
                sample:uiRotateGestures="true"
                sample:uiScrollGestures="true"
                sample:uiTiltGestures="true"
                sample:uiZoomControls="true"
                tools:context="com.example.hongu.apaapa.MapsActivity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/map"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/map"
                    android:format="@string/chronometer_format"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance:"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Straight:"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp" />

                <!--<Switch-->
                <!--android:checked="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Auto Connect"-->
                <!--android:id="@+id/reConnectSwitch" />-->

                <com.example.hongu.apaapa.DirectionView
                    android:id="@+id/direction"
                    class="com.example.hongu.apaapa.DirectionView"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:id="@+id/trim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="trim:"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/rudder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rud:"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/elevator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="elev:"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="403dp"
                android:orientation="vertical">

                <com.example.hongu.apaapa.GraphView
                    android:id="@+id/rpm"
                    class="com.example.hongu.apaapa.GraphView"
                    android:layout_width="83dp"
                    android:layout_height="67dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    sample:title="Cadence"
                    sample:type="0"
                    sample:unit="RPM"
                    sample:vmax="150"
                    sample:vmin="0"
                    sample:x0="50"
                    sample:y0="100"></com.example.hongu.apaapa.GraphView>

                <com.example.hongu.apaapa.GraphView
                    android:id="@+id/ult"
                    class="com.example.hongu.apaapa.GraphView"
                    android:layout_width="83dp"
                    android:layout_height="67dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    sample:title="Ultsonic"
                    sample:type="0"
                    sample:unit="cm"
                    sample:vmax="20"
                    sample:vmin="0"
                    sample:x0="50"
                    sample:y0="100"></com.example.hongu.apaapa.GraphView>

                <Button
                    android:id="@+id/startbtn"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Start"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <com.example.hongu.apaapa.GraphView
                    android:id="@+id/speed"
                    class="com.example.hongu.apaapa.GraphView"
                    android:layout_width="83dp"
                    android:layout_height="67dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    sample:title="機速"
                    sample:type="1"
                    sample:unit="m/s"
                    sample:vmax="100"
                    sample:vmin="0"
                    sample:x0="50"
                    sample:y0="100"></com.example.hongu.apaapa.GraphView>

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="80dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <view
            android:id="@+id/view5"
            class="com.example.hongu.apaapa.TestView"
            android:layout_width="161dp"
            android:layout_height="257dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="360dp"
            android:layout_weight="0.04" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="225dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="527dp"
            android:baselineAligned="false">


        </LinearLayout>
    </LinearLayout>

</FrameLayout>